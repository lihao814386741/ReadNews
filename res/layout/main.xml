<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainLinearLayout"
    android:orientation="horizontal"
    android:layout_width="800px"
    android:layout_height="480px"
    android:background="#7391ff"
    android:gravity="center"
    >
    <LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"   

	 android:orientation="vertical"
    android:layout_width="200px"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:layout_marginLeft="20px"
    >
    <Button android:id="@+id/button1" 
		android:layout_gravity="center"
		android:layout_width="190px" 
		android:layout_height="68px"
		android:background="@drawable/button_jiaodian"
		
		>
	</Button>
	<Button android:id="@+id/button2" 
		android:layout_gravity="center"
		android:layout_width="190px" 
		android:layout_height="68px"
		android:layout_marginTop="15px"
		android:background="@drawable/button_guoji"
		
		>
		</Button>
	<Button android:id="@+id/button3" 
		android:layout_gravity="center"
		android:layout_width="190px" 
		android:layout_height="68px"
		android:layout_marginTop="15px"
		android:background="@drawable/button_yule"
		>
	</Button>
	<Button android:id="@+id/button4"
		android:layout_gravity="center"
		android:layout_width="190px" 
		android:layout_height="68px"
		android:layout_marginTop="15px"
		android:background="@drawable/button_tiyu"
		>
	</Button>
	<Button android:id="@+id/button5"
		android:layout_gravity="center"
		android:layout_width="190px" 
		android:layout_height="68px"
		android:layout_marginTop="15px"
		android:background="@drawable/button_keji"
		>
	</Button>
    <TextView
        android:id="@+id/itemnum"
		android:textColor="@color/white"
		android:layout_width="190px" 
		android:layout_height="68px"

        />

    </LinearLayout>
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="600px"
    android:layout_height="fill_parent"
    android:gravity="center"
    >
	    <ListView
			android:id="@+id/itemList"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
		/> 
    </LinearLayout>
    
 
</LinearLayout>
